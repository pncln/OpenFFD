{
  "case_type": "airfoil",
  "solver": "simpleFoam",
  "physics": "incompressible_flow",
  "objectives": [
    {
      "name": "drag_coefficient",
      "weight": 1.0,
      "patches": ["walls"],
      "direction": [1.0, 0.0, 0.0]
    },
    {
      "name": "lift_coefficient",
      "weight": 0.0,
      "patches": ["walls"],
      "direction": [1.0, 0.0, 0.0]
    }
  ],
  "ffd_config": {
    "control_points": [2, 2, 1],
    "domain": "auto",
    "ffd_type": "ffd",
    "basis_functions": "bernstein",
    "order": 3
  },
  "optimization": {
    "max_iterations": 20,
    "tolerance": 1e-6,
    "algorithm": "slsqp",
    "step_size": 0.05,
    "parallel": false,
    "restart": false,
    "history_file": "optimization_history.json",
    "initial_design_vars": [0.1, -0.1, 0.05, -0.08]
  },
  "constants": {
    "magUInf": 30.0,
    "rho": 1.225,
    "mu": 1.8e-5,
    "chord": 1.0
  },
  "boundaries": {
    "inlet": {
      "U": {
        "type": "fixedValue",
        "value": "uniform (30 0 0)"
      },
      "p": {
        "type": "zeroGradient"
      }
    },
    "outlet": {
      "U": {
        "type": "zeroGradient"
      },
      "p": {
        "type": "fixedValue",
        "value": "uniform 0"
      }
    },
    "walls": {
      "U": {
        "type": "fixedValue",
        "value": "uniform (0 0 0)"
      },
      "p": {
        "type": "zeroGradient"
      }
    },
    "farfield": {
      "U": {
        "type": "fixedValue",
        "value": "uniform (30 0 0)"
      },
      "p": {
        "type": "zeroGradient"
      }
    }
  },
  "mesh_config": {
    "cell_count_target": 50000,
    "boundary_layer_thickness": 0.001,
    "wake_refinement": true
  },
  "post_processing": {
    "force_calculation": true,
    "residual_monitoring": true,
    "field_sampling": ["U", "p"]
  }
}
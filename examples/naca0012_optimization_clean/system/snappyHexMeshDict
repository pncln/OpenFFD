castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    airfoil
    {
        type triSurfaceMesh;
        file "airfoil.stl";
        
        regions
        {
            NACA0012
            {
                name airfoil;
            }
        }
    }
}

